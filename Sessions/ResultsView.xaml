<UserControl x:Class="Sessions.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sessions"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"
             Loaded="UserControl_Loaded">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="35" />
            <RowDefinition Height="1.4*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock>Total Frames:</TextBlock>
            <TextBox Name="tbTotalFrames" Margin="15,0,10,0" Text="{Binding Path=TotalFrames, Mode=OneWay}" Width="40" IsEnabled="False" VerticalAlignment="Top"/>

            <TextBlock># of Partitions:</TextBlock>
            <TextBox Name="tbPartitions" Margin="15,0,10,0" Text="{Binding Path=Partitions}" Width="30" 
                     VerticalAlignment="Top" TextChanged="tbPartitions_TextChanged"/>

            <TextBlock>First set</TextBlock>
            <TextBox Name="tbFirstSet" Margin="15,0,10,0" Text="{Binding Path=FirstSet, ValidatesOnExceptions=True}" Width="30" 
                     VerticalAlignment="Top" TextChanged="tbFirstSet_TextChanged">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <!-- Placeholder for the TextBox itself -->
                            <AdornedElementPlaceholder x:Name="textBox"/>
                            <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
            </TextBox>

            <TextBlock>Second set</TextBlock>
            <TextBox Name="tbSecondSet" Margin="15,0,10,0" Text="{Binding Path=SecondSet, ValidatesOnExceptions=True}" Width="30" VerticalAlignment="Top">
                <Validation.ErrorTemplate>
                    <ControlTemplate>
                        <StackPanel>
                            <!-- Placeholder for the TextBox itself -->
                            <AdornedElementPlaceholder x:Name="textBox"/>
                            <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red"/>
                        </StackPanel>
                    </ControlTemplate>
                </Validation.ErrorTemplate>
            </TextBox>

            <TextBlock Name="tkPartitionSize">Partition size</TextBlock>
            <TextBlock Name="tbPartitionSize" Margin="15,0,10,0" Text="{Binding Path=PartitionSize}" Width="50" VerticalAlignment="Top" HorizontalAlignment="Center" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Margin="5,5,5,5" Name="btHipKneeAnkle" Command="{Binding Path=HKA_Command}" 
                    VerticalAlignment="Top" Content="Check Hip-Knee-Ankle" Padding="5,4"/>

            <Button Margin="40,5,5,5" Name="btHipAlignment" Command="{Binding Path=HipAlignment_Command}" 
                    VerticalAlignment="Top" Content="Check Hip Alignment" Padding="5,4"/>

            <Button Margin="40,5,5,5" Name="btShoulderAlignment" Command="{Binding Path=ShoulderAlignment_Command}" 
                    VerticalAlignment="Top" Content="Check Shoulder Alignment" Padding="5,4"/>
        </StackPanel>

        <!-- Hip-Knee-Ankle Analysis -->
        <Grid Grid.Row="2" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Rectangle Fill="YellowGreen"  Grid.Row="0" IsHitTestVisible="False" />
            <TextBlock Grid.Row="0" Text="Hip-Knee-Ankle Results" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="DarkBlue" FontWeight="Bold"/>

            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Left" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Right" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" />

                <!-- LIMB LEFT (Hip-Knee-Ankle) Max, Min, Amp -->
                <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Hip" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Knee" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Ankle" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Mean" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="SD"   HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Max"  HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Min"  HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="5" Text="Amplit." HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=AverageHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=AverageKneeLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Path=AverageAnkleLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=SDHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Path=SDKneeLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Path=SDAnkleLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=MaxHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Path=MaxKneeLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding Path=MaxAnkleLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Path=MinHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding Path=MinKneeLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding Path=MinAnkleLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding Path=AmpHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="5" Text="{Binding Path=AmpKneeLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="5" Text="{Binding Path=AmpAnkleLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                </Grid>

                <!-- LIMB RIGHT (Hip-Knee-Ankle) Max, Min, Amp -->
                <Grid Grid.Row="1" Grid.Column="1" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Mean" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="SD" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Max" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Min" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Amplit." HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Path=AverageHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding Path=AverageKneeRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding Path=AverageAnkleRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=SDHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=SDKneeRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Path=SDAnkleRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=MaxHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Path=MaxKneeRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding Path=MaxAnkleRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=MinHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Path=MinKneeRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding Path=MinAnkleRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Path=AmpHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding Path=AmpKneeRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding Path=AmpAnkleRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                </Grid>

                <!-- HIP-KNEE Differences LEFT -->
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="0.75*" />
                        <ColumnDefinition Width="0.75*" />
                        <ColumnDefinition Width="1.2*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Text="Hip - Knee" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="1st Set" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="2nd Set" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Mean diff." HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="T" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="DF" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="5" Text="P-Value" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=MeanDiffHipKnee1Left, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Path=MeanDiffHipKnee2Left, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Text="{Binding Path=TDiffHipKneeLeft, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" Text="{Binding Path=DFDiffHipKneeLeft, Mode=OneWay, StringFormat=N1}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="5" Grid.RowSpan="2" Text="{Binding Path=PValueDiffHipKneeLeft, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- HIP-KNEE Differences Right -->
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="1st Set" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="2nd Set" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Mean diff." HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="T" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="DF" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="P-Value" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=MeanDiffHipKnee1Right, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=MeanDiffHipKnee2Right, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Text="{Binding Path=TDiffHipKneeRight, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Text="{Binding Path=DFDiffHipKneeRight, Mode=OneWay, StringFormat=N1}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" Text="{Binding Path=PValueDiffHipKneeRight, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- KNEE-ANKLE Differences LEFT -->
                <Grid Grid.Row="3" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1.5*" />
                        <ColumnDefinition Width="0.75*" />
                        <ColumnDefinition Width="0.75*" />
                        <ColumnDefinition Width="1.2*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Text="Knee - Ankle" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="1st Set" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="2nd Set" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Mean diff." HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="T" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="DF" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="5" Text="P-Value" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=MeanDiffKneeAnkle1Left, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding Path=MeanDiffKneeAnkle2Left, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Text="{Binding Path=TDiffKneeAnkleLeft, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" Text="{Binding Path=DFDiffKneeAnkleLeft, Mode=OneWay, StringFormat=N1}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="5" Grid.RowSpan="2" Text="{Binding Path=PValueDiffKneeAnkleLeft, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>

                <!-- KNEE-ANKLE Differences Right -->
                <Grid Grid.Row="3" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="1st Set" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="2nd Set" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Mean diff." HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="T" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="DF" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="P-Value" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=MeanDiffKneeAnkle1Right, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=MeanDiffKneeAnkle2Right, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Text="{Binding Path=TDiffKneeAnkleRight, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" Text="{Binding Path=DFDiffKneeAnkleRight, Mode=OneWay, StringFormat=N1}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" Text="{Binding Path=PValueDiffKneeAnkleRight, Mode=OneWay, StringFormat=N4}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Hip Alignment -->
        <Grid Grid.Row="3" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Rectangle Fill="LightGreen"  Grid.Row="0" IsHitTestVisible="False" />
            <TextBlock Grid.Row="0" Text="Hip Vertical Alignment" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Black" FontWeight="Bold"/>

            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Left" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" />
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Right" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" />

                <!-- HIP LEFT Max, Min, Amp -->
                <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Hip (Y)" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Mean" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="SD"   HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Max"  HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Min"  HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="5" Text="Amplit." HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=AverageYHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=SDYHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=MaxYHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Path=MinYHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding Path=AmpYHipLeft, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                </Grid>

                <!-- HIP RIGHT Max, Min, Amp -->
                <Grid Grid.Row="1" Grid.Column="1" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Mean" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="SD" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Max" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Min" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Amplit." HorizontalAlignment="Center" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Path=AverageYHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=SDYHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Path=MaxYHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=MinYHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Path=AmpYHipRight, Mode=OneWay, StringFormat=N4}" HorizontalAlignment="Center" />
                </Grid>
            </Grid>
        </Grid>

        <!-- Shoulder Alignment -->
        <Grid Grid.Row="4" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Rectangle Fill="OrangeRed"  Grid.Row="0" IsHitTestVisible="False" />
            <TextBlock Grid.Row="0" Text="Shoulder Vertical Alignment" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="Black" FontWeight="Bold"/>

            <Grid Grid.Row="1" ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="0.5*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Left" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Right" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>

                <!-- Shoulder LEFT Max, Min, Amp -->
                <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Shoulder (Y)" />

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Mean" HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="SD"   HorizontalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Max"  HorizontalAlignment="Center" />
